<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ResponsivePopover
        placement="Bottom"
        showArrow="false"
        offsetX="-60"
    >
        <content>
            <SelectList
                enabled="true"
                maxWidth="100%"
                selectedKey="{mainView>/selectedProcess}"
                selectionChange="onSelectListSelectionChange"
            >
                <items>
                    <core:ListItem
                        text="İzin Belgesini Görüntüle"
                        key="1"
                    />
                    <core:ListItem
                        text="Listeden Çıkar"
                        key="2"
                    />
                    <core:ListItem
                        text="Hareketleri Görüntüle"
                        key="3"
                    />
                </items>
            </SelectList>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>
