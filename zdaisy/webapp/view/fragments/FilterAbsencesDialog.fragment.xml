<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ViewSettingsDialog confirm="onConfirmFilter">
        <filterItems>
            <ViewSettingsCustomItem text="Başlangıç Tarihi">
                <customControl>
                    <DatePicker
                        id="idBegDatePicker"
                        displayFormat="short"
                        class="sapUiSmallMarginBottom"
                        valueFormat="yyyy-MM-dd'T'HH:mm"
                    />
                </customControl>
            </ViewSettingsCustomItem>
            <ViewSettingsCustomItem text="Bitiş Tarihi">
                <customControl>
                    <DatePicker
                        id="idEndDatePicker"
                        displayFormat="short"
                        valueState="Warning"
                        valueStateText="Lütfen Tarih Seçiniz"
                        valueFormat="yyyy-MM-dd'T'HH:mm"
                        class="sapUiSmallMarginBottom"
                        showValueStateMessage="true"
                    />
                </customControl>
            </ViewSettingsCustomItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>
